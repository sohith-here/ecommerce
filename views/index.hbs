
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col_md_3">
                    <div class="card" style="width: 16rem;">
                        <img class="card-img-top"
                            src={{this.Image}}
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
               {{/each}}
                </div>
            </div>
        </div>
        </div>
    </section>

  