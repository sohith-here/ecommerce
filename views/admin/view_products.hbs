<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th> 
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpeg" alt=""></td>
      <td>
        <a href="admin/product-edit/" class="btn btn-primary">Edit</a>
        <a href="product-delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
       </td>
    </tr>
  {{/each}}
  </tbody>
</table>
    </div>
</section>